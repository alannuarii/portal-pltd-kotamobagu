<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <header id="header" class="header fixed-top d-flex align-items-center">
      <div class="d-flex align-items-center justify-content-between">
        <a href="" class="logo d-flex align-items-center">
          <img src="img/logopln2.png" alt="" />
          <!-- <span class="d-none d-lg-block">PORTAL ULPLTD KOTAMOBAGU</span> -->
        </a>
        <i class="bi bi-list toggle-sidebar-btn"></i>
        <span class="d-none d-lg-block ms-3 fs-3 fw-bolder">PORTAL ULPLTD KOTAMOBAGU</span>
      </div>
      <!-- End Logo -->

      <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">
          <li class="nav-item dropdown pe-3">
            <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
              <img src="img/no-image.gif" alt="Profile" class="rounded-circle" />
              <span class="d-none d-md-block dropdown-toggle ps-2"><%= user.name %> </span> </a
            ><!-- End Profile Iamge Icon -->

            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
              <li class="dropdown-header">
                <h6><%= user.name %></h6>
                <span><%= user.email %> </span>
              </li>
              <li>
                <hr class="dropdown-divider" />
              </li>

              <li>
                <hr class="dropdown-divider" />
              </li>

              <li>
                <a class="dropdown-item d-flex align-items-center" href="/logout">
                  <i class="bi bi-box-arrow-right"></i>
                  <span>Log Out</span>
                </a>
              </li>
            </ul>
            <!-- End Profile Dropdown Items -->
          </li>
          <!-- End Profile Nav -->
        </ul>
      </nav>
      <!-- End Icons Navigation -->
    </header>
    <!-- End Header -->

    <!-- Start Sidebar  -->
    <%- include('../partials/sidebar') %>
    <!-- End Sidebar  -->

    <!-- AWAL INPUT  -->
    <main id="main" class="main">
      <section class="section mat-in">
        <div class="row">
          <div class="text-center">
            <span style="font-size: 30px; font-weight: lighter">MATERIAL</span><span style="font-size: 30px; font-weight: bolder; color: #0d5a71">MASUK</span>
            <hr />
          </div>

          <div class="col-12">
            <div class="card" style="height: 500px">
              <div class="card-body">
                <table class="table table-detail">
                  <thead>
                    <tr>
                      <th scope="col">Nomor Material</th>
                      <th scope="col">Deskripsi Material</th>
                      <th scope="col">Material Masuk</th>
                      <th scope="col">Tanggal Masuk</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% materialIn.forEach(mIn => { %>
                    <tr class="text-center">
                      <td><%= mIn.noMat %></td>
                      <td><%= mIn.descMat %></td>
                      <td><%= mIn.matIn %> <%= mIn.satuan %></td>
                      <td><%= mIn.dateIn.toUTCString() %></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <!-- End #main -->
    <!-- AKHIR INPUT  -->
    <footer><%- include('../partials/footer') %></footer>
  </body>
</html>
