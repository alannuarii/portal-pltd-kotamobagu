<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <header id="header" class="header fixed-top d-flex align-items-center">
      <div class="d-flex align-items-center justify-content-between">
        <a href="" class="logo d-flex align-items-center">
          <img src="img/logopln.png" alt="" />
          <span class="d-none d-lg-block">PORTAL ULPLTD KOTAMOBAGU</span>
        </a>
        <i class="bi bi-list toggle-sidebar-btn"></i>
      </div>
      <!-- End Logo -->

      <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">
          <li class="nav-item dropdown pe-3">
            <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
              <img src="img/no-image.gif" alt="Profile" class="rounded-circle" />
              <span class="d-none d-md-block dropdown-toggle ps-2"><%= user.name %> </span> </a
            ><!-- End Profile Iamge Icon -->

            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
              <li class="dropdown-header">
                <h6><%= user.name %></h6>
                <span><%= user.email %> </span>
              </li>
              <li>
                <hr class="dropdown-divider" />
              </li>

              <li>
                <hr class="dropdown-divider" />
              </li>

              <li>
                <a class="dropdown-item d-flex align-items-center" href="/logout">
                  <i class="bi bi-box-arrow-right"></i>
                  <span>Log Out</span>
                </a>
              </li>
            </ul>
            <!-- End Profile Dropdown Items -->
          </li>
          <!-- End Profile Nav -->
        </ul>
      </nav>
      <!-- End Icons Navigation -->
    </header>
    <!-- End Header -->

    <!-- Start Sidebar  -->
    <%- include('../partials/sidebar') %>
    <!-- End Sidebar  -->

    <!-- AWAL INPUT  -->
    <main id="main" class="main">
      <div class="d-flex justify-content-center mb-4">
        <div class="btn btn-light me-2" data-bs-toggle="modal" data-bs-target="#input-mat"><i class="bi-box-arrow-in-right" data-bs-toggle="tooltip" data-bs-placement="top" title="Input Data"></i></div>
        <div class="btn btn-light me-2" data-bs-toggle="modal" data-bs-target="#modal-pers"><i class="bi-upload" data-bs-toggle="tooltip" data-bs-placement="top" title="Upload File"></i></div>
        <a href="detail-persediaan" class="btn btn-light me-2"><i class="bi-info-circle" data-bs-toggle="tooltip" data-bs-placement="top" title="Detail Data"></i></a>
      </div>
      <section class="section gudang">
        <div class="row justify-content-center text-center">
          <div class="col-3">
            <div class="card card-item">
              <h5 class="card-header bg-secondary text-light" style="font-size: 20px">TOTAL ITEM</h5>
              <div class="card-body position-relative">
                <p class="position-absolute start-50 top-50 translate-middle"><%= length %><span style="font-size: 20px; font-weight: normal"> Item</span></p>
              </div>
              <a href="detail-persediaan" class="card-footer btn btn-success">Rincian Data</a>
              <!-- <div class="card-footer btn btn-success"></div> -->
            </div>
          </div>
          <div class="col-3">
            <div class="card card-persediaan">
              <h5 class="card-header bg-secondary text-light" style="font-size: 20px">TOTAL PERSEDIAAN</h5>
              <div class="card-body position-relative">
                <p class="position-absolute start-50 top-50 translate-middle">Rp <%= Math.round(totPers / 1000000) %><span style="font-size: 20px; font-weight: normal"> Juta</span></p>
              </div>
              <a href="detail-persediaan" class="card-footer btn btn-success">Rincian Data</a>
            </div>
          </div>
        </div>
        <div class="row justify-content-center text-center">
          <div class="col-3">
            <div class="card card-masuk">
              <h5 class="card-header bg-secondary text-light" style="font-size: 20px">MATERIAL MASUK</h5>
              <div class="card-body position-relative">
                <p class="position-absolute start-50 top-50 translate-middle"><i class="bi-arrow-up-circle-fill text-primary"></i></p>
              </div>
              <a href="material-masuk" class="card-footer btn btn-success">Rincian Data</a>
            </div>
          </div>
          <div class="col-3">
            <div class="card card-keluar">
              <h5 class="card-header bg-secondary text-light" style="font-size: 20px">MATERIAL KELUAR</h5>
              <div class="card-body position-relative">
                <p class="position-absolute start-50 top-50 translate-middle"><i class="bi-arrow-down-circle-fill text-danger"></i></p>
              </div>
              <a href="material-keluar" class="card-footer btn btn-success">Rincian Data</a>
            </div>
          </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="modal-pers" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Upload File Persediaan Material</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form action="/inventory" method="post" enctype="multipart/form-data" class="d-flex justify-content-end py-3">
                  <label for=""></label>
                  <input type="file" class="form-control" name="pers" id="pers" />
                  <input type="submit" class="btn btn-success ms-2" value="Upload" />
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- Akhir Modal  -->

        <!-- Modal Input-->
        <div class="modal fade" id="input-mat" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Input Data Material</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form method="post" action="/detail-persediaan">
                  <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">Tanggal Material Masuk</label>
                    <div class="col-sm-8 d-flex"><input type="date" class="form-control" name="dateIn" required /></div>
                  </div>
                  <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">Nomor Material</label>
                    <div class="col-sm-8 d-flex">
                      <input type="text" class="form-control" name="noMat" required />
                    </div>
                  </div>
                  <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">Deskripsi Material</label>
                    <div class="col-sm-8 d-flex">
                      <input type="text" class="form-control" name="descMat" required />
                    </div>
                  </div>
                  <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">Jumlah Material</label>
                    <div class="col-sm-8 d-flex"><input type="number" class="form-control" name="stock" required /></div>
                  </div>
                  <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">Satuan</label>
                    <div class="col-sm-8 d-flex"><input type="number" class="form-control" name="satuan" required /></div>
                  </div>
                  <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">Harga Satuan</label>
                    <div class="col-sm-8 d-flex"><input type="number" class="form-control" name="hargaSat" required /></div>
                  </div>
                  <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">Foto Material</label>
                    <div class="col-sm-8 d-flex"><input type="file" class="form-control" name="fotoMat" required /></div>
                  </div>
                  <div class="d-flex justify-content-center"><input style="width: 200px" type="submit" class="btn btn-success" value="Kirim" /></div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- Ahir Modal Input -->
      </section>
    </main>
    <!-- End #main -->
    <!-- AKHIR INPUT  -->
    <footer><%- include('../partials/footer') %></footer>
  </body>
</html>
