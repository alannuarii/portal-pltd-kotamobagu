<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <header id="header" class="header fixed-top d-flex align-items-center">
      <div class="d-flex align-items-center justify-content-between">
        <a href="" class="logo d-flex align-items-center">
          <img src="public/img/logopln.png" alt="" />
          <span class="d-none d-lg-block">PORTAL ULPLTD KOTAMOBAGU</span>
        </a>
        <i class="bi bi-list toggle-sidebar-btn"></i>
      </div>
      <!-- End Logo -->

      <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">
          <li class="nav-item dropdown pe-3">
            <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
              <img src="public/img/no-image.gif" alt="Profile" class="rounded-circle" />
              <span class="d-none d-md-block dropdown-toggle ps-2"><%= user.name %> </span> </a
            ><!-- End Profile Iamge Icon -->

            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
              <li class="dropdown-header">
                <h6><%= user.name %></h6>
                <span><%= user.email %> </span>
              </li>
              <li>
                <hr class="dropdown-divider" />
              </li>

              <li>
                <hr class="dropdown-divider" />
              </li>

              <li>
                <a class="dropdown-item d-flex align-items-center" href="/logout">
                  <i class="bi bi-box-arrow-right"></i>
                  <span>Log Out</span>
                </a>
              </li>
            </ul>
            <!-- End Profile Dropdown Items -->
          </li>
          <!-- End Profile Nav -->
        </ul>
      </nav>
      <!-- End Icons Navigation -->
    </header>
    <!-- End Header -->

    <!-- Start Sidebar  -->
    <%- include('../partials/sidebar') %>
    <!-- End Sidebar  -->

    <!-- AWAL INPUT  -->
    <main id="main" class="main">
      <section class="section form-tamu">
        <div class="row">
          <div class="text-center">
            <span style="font-size: 30px; font-weight: lighter">BUKU TAMU</span><span style="font-size: 30px; font-weight: bolder; color: #0d5a71"> DIGITAL</span>
            <hr />
          </div>
        </div>
        <div class="row d-flex justify-content-center">
          <div class="card col-12 py-5">
            <div class="d-flex justify-content-center mb-md-0 mb-2"><img src="public/img/logopln2.png" style="width: 25%" alt="" /></div>
            <div class="title text-center">PT PLN (PERSERO) UPDK MINAHASA</div>
            <div class="title text-center mb-md-5 mb-3">ULPLTD KOTAMOBAGU</div>
            <form action="/form-tamu" method="post">
              <div class="row d-flex justify-content-center mb-3">
                <div class="col-8">
                  <div>
                    <label class="form-label">Nama Lengkap</label>
                    <input type="text" class="form-control" name="nama" placeholder="Nama Lengkap" required />
                  </div>
                </div>
              </div>
              <div class="row d-flex justify-content-center mb-3">
                <div class="col-8">
                  <div>
                    <label class="form-label">Asal Perusahaan / Instansi</label>
                    <input type="text" class="form-control" name="instansi" placeholder="Asal Perusahaan / Instansi" required />
                  </div>
                </div>
              </div>
              <div class="row d-flex justify-content-center mb-3">
                <div class="col-8">
                  <div>
                    <label class="form-label">Nomor Telepon</label>
                    <input type="number" class="form-control" name="nohp" placeholder="Nomor Telepon" required />
                  </div>
                </div>
              </div>
              <div class="row d-flex justify-content-center mb-3">
                <div class="col-8">
                  <div>
                    <label class="form-label">Tujuan Berkunjung</label>
                    <input type="text" class="form-control" name="tujuan" placeholder="Tujuan Berkunjung" required />
                  </div>
                </div>
              </div>
              <!-- <div class="row d-flex justify-content-center mb-3">
                <div class="col-8">
                  <div>
                    <label class="form-label">Ambil Foto</label>
                    <input type="file" class="form-control" id="ambilFoto" accept="image/*" capture="camera" required />
                  </div>
                </div>
              </div> -->
              <div class="text-center">
                <button type="submit" class="btn btn-success me-2">Simpan</button>
                <button type="reset" class="btn btn-danger">Hapus</button>
              </div>
            </form>
          </div>
        </div>
      </section>
    </main>
    <!-- End #main -->
    <!-- AKHIR INPUT  -->
    <footer><%- include('../partials/footer') %></footer>
  </body>
</html>
