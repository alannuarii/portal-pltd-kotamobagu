<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <header id="header" class="header fixed-top d-flex align-items-center">
      <div class="d-flex align-items-center justify-content-between">
        <a href="" class="logo d-flex align-items-center">
          <img src="img/logopln.png" alt="" />
          <span class="d-none d-lg-block">PORTAL ULPLTD KOTAMOBAGU</span>
        </a>
        <i class="bi bi-list toggle-sidebar-btn"></i>
      </div>
      <!-- End Logo -->

      <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">
          <li class="nav-item dropdown pe-3">
            <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
              <img src="img/no-image.gif" alt="Profile" class="rounded-circle" />
              <span class="d-none d-md-block dropdown-toggle ps-2"><%= user.name %> </span> </a
            ><!-- End Profile Iamge Icon -->

            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
              <li class="dropdown-header">
                <h6><%= user.name %></h6>
                <span><%= user.email %> </span>
              </li>
              <li>
                <hr class="dropdown-divider" />
              </li>

              <li>
                <hr class="dropdown-divider" />
              </li>

              <li>
                <a class="dropdown-item d-flex align-items-center" href="/logout">
                  <i class="bi bi-box-arrow-right"></i>
                  <span>Log Out</span>
                </a>
              </li>
            </ul>
            <!-- End Profile Dropdown Items -->
          </li>
          <!-- End Profile Nav -->
        </ul>
      </nav>
      <!-- End Icons Navigation -->
    </header>
    <!-- End Header -->

    <!-- Start Sidebar  -->
    <%- include('../partials/sidebar') %>
    <!-- End Sidebar  -->

    <!-- AWAL INPUT  -->
    <main id="main" class="main">
      <section class="section">
        <div class="row">
          <div class="text-center">
            <span style="font-size: 30px; font-weight: lighter">QR CODE</span><span style="font-size: 30px; font-weight: bolder; color: #0d5a71"> GENERATOR</span>
            <hr />
          </div>
        </div>
        <div class="row d-flex justify-content-center">
          <div class="col-10">
            <div class="card p-5" style="height: 415px">
              <p>Masukkan URL kemudian klik Generate!</p>
              <form class="form" action="/qr-code" method="POST">
                <input name="url" class="form-control form-control-lg" placeholder="URL or Text" type="text" required />
                <div class="d-flex justify-content-center"><button type="submit" class="btn btn-success mt-3" style="width: 200px">Generate</button></div>
              </form>
            </div>
          </div>
        </div>
      </section>
    </main>
    <!-- End #main -->
    <!-- AKHIR INPUT  -->
    <footer><%- include('../partials/footer') %></footer>
  </body>
</html>
